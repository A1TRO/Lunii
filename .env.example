# Discord Configuration
DISCORD_TOKEN=your_discord_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_test_guild_id_here

# Environment Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=sqlite:./data/lunii.db
# For production: postgresql://user:password@localhost:5432/lunii
DB_LOGGING=false

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Integration (Optional)
ENABLE_AI=false
GEMINI_API_KEY=your_gemini_api_key_here
AI_RATE_LIMIT=10
AI_RATE_WINDOW=60000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUP_SIZE=100MB
BACKUP_RETENTION_DAYS=30

# Monitoring & Health
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
ERROR_WEBHOOK_URL=your_discord_webhook_url_here

# Development Settings
DEBUG_MODE=false
MOCK_DISCORD_API=false
TEST_GUILD_ID=your_test_guild_id_here