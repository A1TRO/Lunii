{
  "name": "lunii",
  "version": "1.0.0",
  "description": "Modern Electron Discord Self-Bot Dashboard",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "deploy:dev": "node scripts/deploy-commands.js --dev",
    "deploy:prod": "node scripts/deploy-commands.js --prod",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "db:seed": "node scripts/seed-database.js",
    "health": "node scripts/health-check.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "electron",
    "discord",
    "selfbot",
    "dashboard"
  ],
  "author": "Lunii Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "acorn": "^8.11.3",
    "archiver": "^6.0.1",
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "discord-rpc": "^4.0.1",
    "dompurify": "^3.0.9",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "extract-zip": "^2.0.1",
    "helmet": "^7.1.0",
    "https-proxy-agent": "^7.0.2",
    "joi": "^17.12.2",
    "jsdom": "^24.0.0",
    "lodash": "^4.17.21",
    "marked": "^12.0.0",
    "moment": "^2.30.1",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "safe-eval": "^0.4.1",
    "sequelize": "^6.37.1",
    "sharp": "^0.33.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.lunii.dashboard",
    "productName": "Lunii",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js",
      "!src/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  }
}
